{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "code-complexity": [
      "error",
      10
    ],
    "compiler-version": [
      "error",
      "^0.6.0"
    ],
    "const-name-snakecase": "off",
    "constructor-syntax": "error",
    "func-name-mixedcase": "off",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "not-rely-on-time": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}