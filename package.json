{
  "name": "@accu.finance/protocol-v1",
  "version": "1.0.0",
  "description": "Accu Protocol V1 smart contracts - A fork of Aave Protocol V2",
  "files": [
    "abi",
    "artifacts",
    "contracts",
    "deployments",
    "exports",
    "types"
  ],
  "scripts": {
    "prepare": "node ./.setup.js && npx husky install && npm run compile",
    "lint": "eslint \"**/*.{js,ts}\" && solhint contracts/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix contracts/**/*.sol",
    "format": "npx prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "npx prettier --write \"**/*.{ts,js,sol}\"",
    "format:fix:ts": "npx prettier --write \"**/*.{ts,js}\"",
    "compile": "cross-env SKIP_LOAD=true npx hardhat compile",
    "test": "npm run test:ethereum-main",
    "test:ethereum-main": "cross-env ADDRESS_PROVIDER_ID=1 npx hardhat test",
    "test:bsc-main": "cross-env ADDRESS_PROVIDER_ID=2 npx hardhat test",
    "clean": "rm -rf ./artifacts ./cache ./typechain",
    "coverage": "cross-env ADDRESS_PROVIDER_ID=2 npx hardhat coverage --network hardhat",
    "localhost:node": "npx hardhat node --hostname 0.0.0.0 --no-deploy",
    "localhost:deploy:bsc-main": "cross-env ADDRESS_PROVIDER_ID=2 npx hardhat deploy --network localhost --tags testEnv",
    "localhost:deploy:ethereum-main": "cross-env ADDRESS_PROVIDER_ID=1 npx hardhat deploy --network localhost --tags testEnv",
    "localhost:node:test-env:bsc-main": "cross-env ADDRESS_PROVIDER_ID=2 npx hardhat node --tags testEnv --hostname 0.0.0.0",
    "bsctestnet:deploy:bsc-main": "cross-env ADDRESS_PROVIDER_ID=2 npx hardhat deploy --network bsctestnet --tags testnetBscmain",
    "console:fork": "FORK=main hardhat console",
    "prepublishOnly": "npm run compile"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.11",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@tenderly/hardhat-tenderly": "^1.0.11",
    "@typechain/ethers-v5": "^6.0.1",
    "@types/chai": "^4.2.15",
    "@types/lodash": "^4.14.168",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.3.0",
    "chai-ethers": "0.0.1",
    "cli-table3": "^0.6.0",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.4.6",
    "fs-extra": "^9.1.0",
    "hardhat": "^2.3.0",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "husky": "^7.0.4",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "mocha": "^8.3.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "pretty-quick": "^3.1.1",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typechain": "^4.0.2",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'contracts/**/*.sol' --pattern '**/*.{ts,js}'"
    }
  },
  "author": "",
  "contributors": [],
  "license": "AGPLv3",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/accu-finance/protocol-v1.git"
  }
}