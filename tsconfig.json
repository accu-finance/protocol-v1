{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "artifacts", "deployments", "cache"],
  "include": ["hardhat.config.ts", "**/*.ts", "**/*.js"]
}
